<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CodeGenerator.Views.AddTemplatePage">
    <ContentPage.Content>
        <StackLayout Padding="5,5,5,5" BackgroundColor="Beige">
            <Entry Placeholder="Name" Text="{Binding Id}"/>
            <Entry Placeholder="Description" Text="{Binding Description}"/>
            
            <Editor Placeholder="Content of template" 
                    Text="{Binding Content}"
                    VerticalOptions="FillAndExpand"
                    />
            
            <Button Clicked="OnSaveButtonClicked" Text="Save"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>